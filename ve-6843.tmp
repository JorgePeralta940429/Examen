    public bool TextBoxVlida(TextBox txt)
    {

        if(txt.Text.Equals("")){
            txt.BorderColor = System.Drawing.Color.Red;
            return false;
        }
        else{
            txt.BorderColor = System.Drawing.Color.Green;
            return true;
        }

    }





